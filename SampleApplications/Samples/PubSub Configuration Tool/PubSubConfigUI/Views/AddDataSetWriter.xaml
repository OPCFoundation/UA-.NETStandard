<Window x:Class="PubSubConfigurationUI.Views.AddDataSetWriter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PubSubConfigurationUI.Views"
        mc:Ignorable="d"
        Title="Add DataSet Writer" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="DataSet Writer Name" Width="180" />
        <TextBox x:Name="DataSetWriterNameTxt" Grid.Row="0" Text="{Binding DataSetWriterName}" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />

        <Label Grid.Row="1" Grid.Column="0" Content="Published DataSet Name" Width="180" />
        <TextBox Text="{Binding DataSetName}" Grid.Row="1" Grid.Column="1" Margin="0,5" Width="210"
                     Height="23" IsEnabled="True" IsReadOnly="True" />
        <Button Width="30" Height="20" Grid.Row="1" Grid.Column="2" Content="..." Click="OnGetPublisherId" HorizontalAlignment="Left" Margin="5,0" />
        <Label Grid.Row="2"  Grid.Column="0" Content="Key Frame Count" Width="180" />
        <TextBox  Text="{Binding KeyFrameCount}" Grid.Row="2" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />

        <Label Grid.Row="3"  Grid.Column="0" Content="DataSet Writer Id" Width="180" />
        <TextBox  Text="{Binding DataSetWriterId}" Grid.Row="3" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />

        <Label Grid.Row="4" Grid.Column="0" Content="Transport Settings" Width="180" />
        <ComboBox x:Name="TransportSelect" Grid.Row="4" IsEnabled="False" SelectedIndex="{Binding TransportSetting}" SelectionChanged="TransportSelect_SelectionChanged" Grid.Column="1"
                                  Margin="0,5" Width="210" Height="23">
            <ComboBoxItem>Datagram</ComboBoxItem>
            <ComboBoxItem>Broker</ComboBoxItem>
        </ComboBox>

        <Label Grid.Row="5" Grid.Column="0" Content="Message Settings" Width="180" />
        <ComboBox x:Name="MessageSelect" Grid.Row="5" IsEnabled="False" SelectedIndex="{Binding MessageSetting}" SelectionChanged="MessageSelect_SelectionChanged" Grid.Column="1"
                                  Margin="0,5" Width="210" Height="23">
            <ComboBoxItem>Uadp</ComboBoxItem>
            <ComboBoxItem>Json</ComboBoxItem>
        </ComboBox>

        <Label Grid.Row="6" Visibility="{Binding IsBrokerTransport}" Grid.Column="0" Content="Queue Name" Width="180" />
        <TextBox Grid.Row="6" Visibility="{Binding IsBrokerTransport}" Text="{Binding QueueName}" Grid.Column="1" Margin="0,5"
                     Width="210" Height="23" />

        <Label Grid.Row="7" Visibility="{Binding IsBrokerTransport}" Grid.Column="0" Content="Metadata QueueName" Width="180" />
        <TextBox Visibility="{Binding IsBrokerTransport}" Text="{Binding MetadataQueueName}" Grid.Row="7" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />

        <Label Grid.Row="8" Visibility="{Binding IsBrokerTransport}" Grid.Column="0" Content="Metadata UpdateTime" Width="180" />
        <TextBox Visibility="{Binding IsBrokerTransport}" Text="{Binding MetadataUpdataTime}" Grid.Row="8" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />

        <Label Grid.Row="9" Visibility="{Binding IsBrokerTransport}" Grid.Column="0" Content="Resource Uri" Width="180" />
        <TextBox Grid.Row="9" Visibility="{Binding IsBrokerTransport}" Text="{Binding ResourceUri}" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />

        <Label Grid.Row="11" Visibility="{Binding IsBrokerTransport}" Grid.Column="0" Content="Authentication Profile Uri" Width="180" />
        <TextBox Grid.Row="11" Visibility="{Binding IsBrokerTransport}" Text="{Binding AuthenticationProfileUri}" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />

        <Label Grid.Row="12" Visibility="{Binding IsBrokerTransport}" Grid.Column="0" Content="Requested Delivery Guarantee" Width="180" />
        
        <ComboBox Grid.Row="12" Grid.Column="1" Visibility="{Binding IsBrokerTransport}" SelectedIndex="{Binding RequestedDeliveryGuarantee}" Margin="0,5"
                      Width="210" Height="23">
            <ComboBoxItem>NotSpecified</ComboBoxItem>
            <ComboBoxItem>BestEffort</ComboBoxItem>
            <ComboBoxItem>AtLeastOnce</ComboBoxItem>
            <ComboBoxItem>AtMostOnce</ComboBoxItem>
            <ComboBoxItem>ExactlyOnce</ComboBoxItem>
        </ComboBox>

        <Label Grid.Row="13" Visibility="{Binding IsDatagramMessage}" Grid.Column="0" Content="Configured Size" Width="180" />
        <TextBox Grid.Row="13" Visibility="{Binding IsDatagramMessage}" Text="{Binding ConfiguredSize}" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />

        <Label Grid.Row="14" Visibility="{Binding IsDatagramMessage}" Grid.Column="0" Content="Network Message Number" Width="180" />
        <TextBox Grid.Row="14" Visibility="{Binding IsDatagramMessage}" Text="{Binding NetworkMessageNumber}" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />

        <Label Grid.Row="15" Visibility="{Binding IsDatagramMessage}" Grid.Column="0" Content="DataSet Offset" Width="180" />
        <TextBox Grid.Row="15" Visibility="{Binding IsDatagramMessage}" Text="{Binding DataSetOffset}" Grid.Column="1"
                     Margin="0,5" Width="210" Height="23" />


        <GroupBox  Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="3"
                      Header="Data Set Field Content Mask" HorizontalAlignment="Left"
                      VerticalAlignment="Top">
            <Grid Width="478" Height="50" Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="Chk_box1" Content="Status Code" Margin="0,5" HorizontalAlignment="Left"
                              VerticalAlignment="Top" />
                <CheckBox x:Name="Chk_box2" Grid.Row="1" Margin="0,5" Grid.Column="0"
                              Content="Source TimeStamp" HorizontalAlignment="Left"
                              VerticalAlignment="Top" />
                <CheckBox x:Name="Chk_box3" Grid.Row="0" Margin="0,5" Grid.Column="1"
                              Content="Server TimeStamp" HorizontalAlignment="Left"
                              VerticalAlignment="Top" />
                <CheckBox x:Name="Chk_box4" Grid.Row="1" Margin="0,5" Grid.Column="1"
                              Content="Source PicoSeconds" HorizontalAlignment="Left"
                              VerticalAlignment="Top" />
                <CheckBox x:Name="Chk_box5" Content="Server PicoSeconds" Margin="0,5" Grid.Row="0" Grid.Column="2"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top" />
                <CheckBox x:Name="Chk_box6" Grid.Row="1" Margin="0,5" Grid.Column="2"
                              Content="Raw Data Encoding" HorizontalAlignment="Left"
                              VerticalAlignment="Top" />
            </Grid>

        </GroupBox>

        <GroupBox Visibility="{Binding IsDatagramMessage}" Grid.Row="17" Grid.Column="0" Grid.ColumnSpan="3"
                              Header="Uadp Data Set Message Content Mask" HorizontalAlignment="Left"
                              VerticalAlignment="Top">
            <Grid Width="478" Height="50" Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="UadpChk_box1" Content="Timestamp" Margin="0,5" HorizontalAlignment="Left"
                                      VerticalAlignment="Top" />
                <CheckBox x:Name="UadpChk_box2" Grid.Row="1" Margin="0,5" Grid.Column="0"
                                      Content="PicoSeconds" HorizontalAlignment="Left"
                                      VerticalAlignment="Top" />
                <CheckBox x:Name="UadpChk_box3" Grid.Row="0" Margin="0,5" Grid.Column="1"
                                      Content="Status" HorizontalAlignment="Left"
                                      VerticalAlignment="Top" />
                <CheckBox x:Name="UadpChk_box4" Grid.Row="1" Margin="0,5" Grid.Column="1"
                                      Content="MajorVersion" HorizontalAlignment="Left"
                                      VerticalAlignment="Top" />
                <CheckBox x:Name="UadpChk_box5" Content="MinorVersion" Margin="0,5" Grid.Row="0" Grid.Column="2"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top" />
                <CheckBox x:Name="UadpChk_box6" Grid.Row="1" Margin="0,5" Grid.Column="2"
                                      Content="SequenceNumber" HorizontalAlignment="Left"
                                      VerticalAlignment="Top" />
            </Grid>
        </GroupBox>

        <GroupBox Visibility="{Binding IsBrokerMessage}" Grid.Row="18" Grid.Column="0" Grid.ColumnSpan="3"
                              Header="Json Data Set Message Content Mask" HorizontalAlignment="Left"
                              VerticalAlignment="Top">
            <Grid Width="Auto" Height="50" Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="JsonChk_box1" Content="DataSetWriterId" Margin="0,5" HorizontalAlignment="Left"
                                      VerticalAlignment="Center" />
                <CheckBox x:Name="JsonChk_box2" Grid.Row="1" Margin="0,5" Grid.Column="0"
                                      Content="MetaDataVersion" HorizontalAlignment="Left"
                                      VerticalAlignment="Center" />
                <CheckBox x:Name="JsonChk_box3" Grid.Row="0" Margin="0,5" Grid.Column="1"
                                      Content="SequenceNumber" HorizontalAlignment="Left"
                                      VerticalAlignment="Center" />
                <CheckBox x:Name="JsonChk_box4" Grid.Row="1" Margin="0,5" Grid.Column="1"
                                      Content="Timestamp" HorizontalAlignment="Left"
                                      VerticalAlignment="Center" />
                <CheckBox x:Name="JsonChk_box5" Content="Status" Margin="0,5" Grid.Row="0" Grid.Column="2"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center" />
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="19" Grid.Column="1" Grid.ColumnSpan="2" Margin="-3,7" Orientation="Horizontal"
                        VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Width="100" Height="23" Content="Apply" VerticalAlignment="Center" Click="OnApplyClick" />
            <Button Width="100" Height="23" Margin="5,0" Content="Cancel" VerticalAlignment="Center"
                        Click="OnCanecelClick" />
        </StackPanel>

    </Grid>
</Window>