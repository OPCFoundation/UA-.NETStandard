<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(LibCoreTargetFrameworks)</TargetFrameworks>
    <PackageId>$(PackagePrefix).Opc.Ua.Security.Certificates</PackageId>
    <AssemblyName>$(AssemblyPrefix).Security.Certificates</AssemblyName>
    <RootNamespace>Opc.Ua.Security.Certificates</RootNamespace>
    <Description>OPC UA Security X509 Certificates Class Library</Description>
    <IsPackable>true</IsPackable>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageLicenseFile></PackageLicenseFile>
    <!-- currently the packages based on bouncy castle exposes additional API
         so package validation is disabled to pass the build -->
    <EnablePackageValidation>false</EnablePackageValidation>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Common\**" />
    <Compile Remove="Documentation\**" />
    <Compile Remove="Extensions\**" />
    <Compile Remove="Org.BouncyCastle\**" />
    <Compile Remove="PEM\**" />
    <Compile Remove="Properties\**" />
    <Compile Remove="X509Certificate\**" />
    <Compile Remove="X509Crl\**" />
    <EmbeddedResource Remove="Common\**" />
    <EmbeddedResource Remove="Documentation\**" />
    <EmbeddedResource Remove="Extensions\**" />
    <EmbeddedResource Remove="Org.BouncyCastle\**" />
    <EmbeddedResource Remove="PEM\**" />
    <EmbeddedResource Remove="Properties\**" />
    <EmbeddedResource Remove="X509Certificate\**" />
    <EmbeddedResource Remove="X509Crl\**" />
    <None Remove="Common\**" />
    <None Remove="Documentation\**" />
    <None Remove="Extensions\**" />
    <None Remove="Org.BouncyCastle\**" />
    <None Remove="PEM\**" />
    <None Remove="Properties\**" />
    <None Remove="X509Certificate\**" />
    <None Remove="X509Crl\**" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Polyfills\System.Collections.Generic.cs" />
    <Compile Remove="Polyfills\System.Security.Cryptography.X509Certificates.cs" />
    <Compile Remove="Polyfills\System.Threading.Tasks.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable" />
    <PackageReference Include="System.Diagnostics.DiagnosticSource" />
    <PackageReference Include="System.Formats.Asn1" />
    <PackageReference Include="System.Text.Json" />
  </ItemGroup>
  <!-- Add additional crypto library version -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net472' OR '$(TargetFramework)' == 'net48' OR '$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="BouncyCastle.Cryptography" />
  </ItemGroup>
  <!-- Polyfills for .NET Standard 2.0 and .net 4.8 -->
  <ItemGroup>
    <PackageReference Include="PolySharp" PrivateAssets="All" />
  </ItemGroup>
  <PropertyGroup>
    <PolySharpUsePublicAccessibilityForGeneratedTypes>true</PolySharpUsePublicAccessibilityForGeneratedTypes>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <PackageId>$(PackageId).Debug</PackageId>
  </PropertyGroup>
  <PropertyGroup Condition="'$(SignAssembly)' == 'true'">
    <DefineConstants>$(DefineConstants);SIGNASSEMBLY</DefineConstants>
  </PropertyGroup>
  <!-- Choose which platforms support ECC -->
  <PropertyGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
    <DefineConstants>$(DefineConstants);ECC_SUPPORT</DefineConstants>
  </PropertyGroup>
  <Target Name="GetPackagingOutputs" />
</Project>
